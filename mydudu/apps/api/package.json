        "exceljs": "^4.4.0",
        "express": "^5.2.1",
        "fast-json-stable-stringify": "^2.1.0",
        "firebase-admin": "^13.6.1",
        "firebase-functions": "^7.0.5",
        "ioredis": "^5.9.3",
